<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/f1_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@drawable/foto"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HARIANTO"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#3C633737"
            android:padding="6dp"
            />
    </FrameLayout>

    <Button
        android:id="@+id/btn_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f1_header"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:height="65dp"
        android:backgroundTint="#3F51B5"
        android:clickable="true"
        android:text="Profil"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_pendidikan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#3F51B5"
        android:clickable="true"
        android:text="Riwayat Pendidikan"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/btn_profil"/>

    <Button
        android:id="@+id/btn_hubungi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#3F51B5"
        android:clickable="true"
        android:text="Hubungi Saya"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/btn_pendidikan"/>

</RelativeLayout>